NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3001
LOG_LEVEL=debug

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/refunds
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_DATABASE=refunds

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS_ENABLED=false

# Authentication
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.example.com
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=

# AWS Services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3 Configuration
S3_BUCKET_NAME=refund-service-documents

# SQS Configuration
SQS_REFUND_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/refund-processing
SQS_NOTIFICATION_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/notification-queue
SQS_DEAD_LETTER_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/refund-dlq

# KMS Configuration
KMS_KEY_ID=
BANK_ACCOUNT_KMS_KEY_ID=

# Payment Gateways
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_API_VERSION=2023-08-16
ADYEN_API_KEY=
ADYEN_MERCHANT_ACCOUNT=
ADYEN_WEBHOOK_HMAC_KEY=
FISERV_API_KEY=
FISERV_MERCHANT_ID=
FISERV_TERMINAL_ID=

# Internal Services
PAYMENT_SERVICE_URL=http://localhost:3010
BALANCE_SERVICE_URL=http://localhost:3020
MERCHANT_SERVICE_URL=http://localhost:3030
PROGRAM_SERVICE_URL=http://localhost:3040

# Email Configuration
EMAIL_SENDER=refunds@example.com
SES_CONFIGURATION_SET=refund-emails

# Monitoring
DATADOG_API_KEY=
DATADOG_APP_KEY=
SENTRY_DSN=

# Feature Flags
ENABLE_APPROVAL_WORKFLOWS=true
ENABLE_BANK_ACCOUNT_ENCRYPTION=true
ENABLE_COMPLIANCE_ENGINE=true

# Performance
DEFAULT_REQUEST_TIMEOUT_MS=30000
CACHE_TTL_SECONDS=300
MAX_BATCH_SIZE=100